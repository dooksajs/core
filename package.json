{
  "name": "@dooksa/ds-plugin-starter-kit",
  "version": "1.0.0",
  "description": "This is a starter kit to build plugins for Dooksa",
  "main": "dist/index.js",
  "scripts": {
    "lint": "standard",
    "format": "standard --fix",
    "dev": "npm run build:hash; webpack serve --config webpack.dev.config.js",
    "build": "webpack --config webpack.prod.config.js",
    "build:hash": "npm run build; node build/createHash.js",
    "test:unit": "cypress run --spec cypress/integration/ds-plugin-starter-kit.spec.js --headless"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@bitbucket.org:dooksa/ds-plugin-starter-kit.git"
  },
  "author": {
    "name": "Thomas David",
    "email": "tom@mightysmile.com"
  },
  "standard": {
    "env": [
      "browser",
      "mocha"
    ],
    "globals": [
      "cy",
      "Cypress",
      "expect",
      "assert"
    ]
  },
  "browserslist": [
    "> 0.5%",
    "last 2 versions",
    "not dead",
    "not IE 11",
    "not OperaMini all"
  ],
  "devDependencies": {
    "@babel/cli": "^7.12.10",
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "@dooksa/ds-plugins": "git+ssh://git@bitbucket.org/dooksa/ds-plugins.git",
    "babel-loader": "^8.2.2",
    "cypress": "^6.5.0",
    "standard": "*",
    "webpack": "^5.17.0",
    "webpack-cli": "^4.4.0",
    "webpack-dev-server": "^3.11.2"
  }
}
