{
  "name": "@dooksa/ds-plugin-starter-kit",
  "version": "1.0.0",
  "description": "This is a starter kit to build plugins for Dooksa",
  "main": "src/index.js",
  "scripts": {
    "lint": "standard",
    "format": "standard --fix",
    "dev": "webpack serve --config webpack.config.js",
    "test:unit": "cypress run --spec cypress/integration/ds-plugin-starter-kit.spec.js",
    "test:unitrecord": "cypress run --record --spec cypress/integration/ds-plugin-starter-kit.spec.js",
    "e2e": "cypress run --spec cypress/integration/ds-plugin-starter-kit-e2e.spec.js",
    "e2e:record": "cypress run --record --spec cypress/integration/ds-plugin-starter-kit-e2e.spec.js"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@bitbucket.org:dooksa/ds-plugin-starter-kit.git"
  },
  "author": {
    "name": "Thomas David",
    "email": "tom@mightysmile.com"
  },
  "browserslist": [
    "> 0.5%",
    "last 2 versions",
    "not dead",
    "not IE 11",
    "not OperaMini all"
  ],
  "standard": {
    "env": [
      "browser",
      "mocha"
    ],
    "globals": [
      "cy",
      "Cypress",
      "expect",
      "assert"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.12.10",
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "@cypress/code-coverage": "^3.9.12",
    "@dooksa/ds-plugin": "bitbucket:dooksa/ds-plugin",
    "babel-loader": "^8.2.2",
    "babel-plugin-istanbul": "^6.0.0",
    "cypress": "^8.7.0",
    "html-webpack-plugin": "^4.5.1",
    "standard": "*",
    "webpack": "^5.17.0",
    "webpack-cli": "^4.4.0",
    "webpack-dev-server": "^3.11.2"
  }
}
