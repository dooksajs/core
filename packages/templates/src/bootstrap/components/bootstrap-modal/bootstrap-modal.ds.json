{
  "actions": [
    {
      "id": "bootstrap-modal-create-open",
      "sequence": [
        {
          "viewModal_create":{
            "viewId": {
              "get_contextValue": "viewId"
            },
            "widgetId": {
              "get_contextValue": "widgetId"
            }
          }
        },
        {
          "viewModal_show": {
            "viewId": {
              "get_contextValue": "viewId"
            }
          }
        }
      ]
    },
    {
      "id": "bootstrap-modal-set-title",
      "sequence": [
        {
          "set_dataValue": {
            "name": "content/items",
            "value": {
              "get_actionValue": {
                "id": {
                  "get_dataValue": {
                    "name": "widget/items",
                    "query": {
                      "id": {
                        "get_contextValue": "widgetId"
                      }
                    }
                  }
                },
                "query": "bootstrap-edit-section-template"
              }
            },
            "options": {
              "id": {
                "get_dataValue": {
                  "name": "view/content",
                  "query": {
                    "id": {
                      "get_contextValue": "viewId"
                    }
                  }
                }
              },
              "update": {
                "position": ["values", "value"]
              }
            }
          }
        }
      ]
    }
  ]
}