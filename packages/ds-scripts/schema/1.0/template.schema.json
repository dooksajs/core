{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://dooksa.org/schemas/1.0/template.schema.json",
  "title": "Widget template",
  "type": "object",
  "properties": {
    "template": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "icon": {
          "type": "string",
          "description": "Any icon name from https://icon-sets.iconify.design/, e.g. mdi:fire"
        }
      }
    },
    "translations": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "content": {
            "type": "string"
          },
          "from": {
            "type": "string"
          },
          "to": {
            "type": "array",
            "items": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "actions": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "sequence": {
            "type": "array",
            "items": {
              "$ref": "./base.schema.json#/$defs/action"
            }
          }
        }
      }
    }
  }
}
