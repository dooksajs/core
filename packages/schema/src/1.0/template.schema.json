{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schema.dooksa.org/1.0/template.schema.json",
  "title": "Template",
  "$defs": {
    "template_create": {
      "type": "object",
      "properties": {
        "id": {
          "$ref": "./base.schema.json#/$defs/string"
        },
        "mode": {
          "$ref": "./base.schema.json#/$defs/string"
        },
        "language": {
          "$ref": "./base.schema.json#/$defs/string"
        },
        "contentOptions": {
          "type": "object",
          "patternProperties": {
            "[a-z|A-Z]": {
              "type": "object"
            }
          }
        },
        "widgetOptions": {
          "type": "object",
          "properties": {
            "groupId": {
              "$ref": "./base.schema.json#/$defs/string"
            }
          }
        }
      }
    }
  }
}