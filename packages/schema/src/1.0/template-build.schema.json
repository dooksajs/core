{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schema.dooksa.org/1.0/template-build.schema.json",
  "title": "Build template",
  "type": "object",
  "properties": {
    "templates": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "icon": {
            "type": "string",
            "description": "Any icon name from https://icon-sets.iconify.design/, e.g. mdi:fire"
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "children": {
            "description": "Allowed child templates",
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "styles": {
            "description": "CSS variable overwrites",
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "required": ["id"]
      }
    },
    "translations": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "properties": {
          "content": {
            "type": "string"
          },
          "from": {
            "type": "string"
          },
          "to": {
            "type": "array",
            "items": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "actions": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "sequence": {
            "type": "array",
            "items": {
              "$ref": "./base.schema.json#/$defs/action"
            }
          }
        }
      }
    }
  }
}
