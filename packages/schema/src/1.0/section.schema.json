{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schema.dooksa.org/1.0/section.schema.json",
  "title": "Section",
  "$defs": {
    "section_append": {
      "type": "object",
      "properties": {
        "id": {
          "$ref": "./base.schema.json#/$defs/string"
        },
        "viewId": {
          "$ref": "./base.schema.json#/$defs/string"
        }
      }
    },
    "section_render": {
      "type": "object",
      "properties": {
        "id": {
          "$ref": "./base.schema.json#/$defs/string"
        },
        "viewId": {
          "$ref": "./base.schema.json#/$defs/string"
        },
        "uniqueId": {
          "$ref": "./base.schema.json#/$defs/string"
        },
        "mode": {
          "$ref": "./base.schema.json#/$defs/string"
        }
      }
    },
    "section_set": {
      "type": "object",
      "properties": {
        "value": {
          "oneOf": [
            {
              "$ref": "./base.schema.json#/$defs/listString"
            },
            {
              "type": "string"
            }
          ]
        },
        "options": {
          "$ref": "./data.schema.json#/$defs/setDataValue"
        }
      }
    },
    "section_update": {
      "type": "object",
      "properties": {
        "id": {
          "$ref": "./base.schema.json#/$defs/string"
        },
        "viewId": {
          "$ref": "./base.schema.json#/$defs/string"
        }
      }
    }
  }
}