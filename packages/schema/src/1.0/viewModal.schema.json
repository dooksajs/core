{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schema.dooksa.org/1.0/viewModal.schema.json",
  "title": "View modal",
  "$defs": {
    "viewModal_create": {
      "type": "object",
      "properties": {
        "viewId": {
          "$ref": "./base.schema.json#/$defs/string"
        },
        "widgetId": {
          "$ref": "./base.schema.json#/$defs/string"
        },
        "options": {
          "type": "object",
          "properties": {
            "backdrop": {
              "oneOf": [
                {
                  "$ref": "./base.schema.json#/$defs/boolean"
                },
                {
                  "const": "static"
                }
              ]
            },
            "focus": {
              "$ref": "./base.schema.json#/$defs/boolean"
            },
            "keyboard": {
              "$ref": "./base.schema.json#/$defs/boolean"
            }
          }
        }
      }
    },
    "viewModal_show": {
      "$ref": "./base.schema.json#/$defs/string"
    }
  }
}