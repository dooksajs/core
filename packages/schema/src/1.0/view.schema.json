{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schema.dooksa.org/1.0/view.schema.json",
  "title": "View",
  "$defs": {
    "view_insert": {
      "type": "object",
      "properties": {
        "targetId": {
          "$ref": "./base.schema.json#/$defs/string"
        },
        "sourceId": {
          "$ref": "./base.schema.json#/$defs/string"
        },
        "widgetId": {
          "$ref": "./base.schema.json#/$defs/string"
        },
        "widgetMode": {
          "$ref": "./base.schema.json#/$defs/string"
        },
        "type": {
          "enum": ["append","after","before","replace"]
        }
      }
    },
    "view_remove": {
      "type": "object",
      "properties": {
        "id": {
          "$ref": "./base.schema.json#/$defs/string"
        }
      }
    },
    "view_removeAttribute": {
      "type": "object",
      "properties": {
        "viewId": {
          "$ref": "./base.schema.json#/$defs/string"
        },
        "name": {
          "$ref": "./base.schema.json#/$defs/string"
        },
        "value": {
          "$ref": "./base.schema.json#/$defs/string"
        }
      }
    },
    "view_replace": {
      "type": "object",
      "properties": {
        "viewParentId": {
          "$ref": "./base.schema.json#/$defs/string"
        },
        "viewId": {
          "$ref": "./base.schema.json#/$defs/string"
        },
        "viewIdPrev": {
          "$ref": "./base.schema.json#/$defs/string"
        },
        "childIndex": {
          "$ref": "./base.schema.json#/$defs/number"
        }
      }
    },
    "view_setAttribute": {
      "type": "object",
      "properties": {
        "viewId": {
          "$ref": "./base.schema.json#/$defs/string"
        },
        "name": {
          "$ref": "./base.schema.json#/$defs/string"
        },
        "value": {
          "$ref": "./base.schema.json#/$defs/string"
        }
      }
    },
    "view_updateValue": {
      "type": "object",
      "properties": {
        "viewId": {
          "$ref": "./base.schema.json#/$defs/string"
        },
        "language": {
          "$ref": "./base.schema.json#/$defs/string"
        }
      }
    }
  }
}