{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schema.dooksa.org/1.0/operator.schema.json",
  "title": "Action",
  "$defs": {
    "operator_compare": {
      "title": "Compare",
      "description": "Compare two or more values",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "value_1":  {
            "$ref": "./base.schema.json#/$defs/primitive"
          },
          "op": {
            "enum": ["&&", "||"]
          },
          "value_2": {
            "$ref": "./base.schema.json#/$defs/primitive"
          }
        },
        "required": ["value_1", "op", "value_2"]
      }
    },
    "operator_eval": {
      "title": "Evaluate",
      "description": "Evaluate two values",
      "type": "object",
      "properties": {
        "name": {
          "$ref": "./base.schema.json#/$defs/string"
        },
        "values": {
          "type": "array",
          "minItems": 2,
          "items": {
            "oneOf": [
              {
                "$ref": "./base.schema.json#/$defs/action"
              },
              {
                "type": "string"
              },
              {
                "type": "number"
              }
            ]
          }
        }
      }
    }
  }
}