{
  "name": "@dooksa/test",
  "version": "0.0.0",
  "description": "Testing utilities and mocks for Dooksa packages",
  "author": "Thomas David <tom@mightysmile.com>",
  "repository": "git@github.com:dooksajs/dooksa.git",
  "license": "AGPL-3.0-or-later",
  "type": "module",
  "main": "src/index.js",
  "types": "types/index.d.ts",
  "exports": {
    ".": "./src/index.js",
    "./plugins": "./src/plugins/index.js",
    "./utils": "./src/utils/index.js",
    "./assertions": "./src/assertions/index.js",
    "./factories": "./src/factories/index.js"
  },
  "imports": {
    "#core": "@dooksa/plugins/core",
    "#client": "@dooksa/plugins/client",
    "#server": "@dooksa/plugins/server"
  },
  "scripts": {
    "test-unit": "node --experimental-test-module-mocks --test",
    "test-coverage-lcov": "node --test --experimental-test-module-mocks --experimental-test-coverage --test-reporter=lcov --test-reporter-destination=lcov.info",
    "test-coverage-report": "node --test --experimental-test-module-mocks --experimental-test-coverage"
  },
  "devDependencies": {
    "@dooksa/create-action": "workspace:^",
    "@dooksa/create-plugin": "workspace:^",
    "@dooksa/plugins": "workspace:^",
    "@dooksa/utils": "workspace:^",
    "express": "^5.2.1",
    "jsdom": "^27.4.0"
  },
  "keywords": [
    "test",
    "testing",
    "mocks",
    "fixtures",
    "dooksa"
  ]
}