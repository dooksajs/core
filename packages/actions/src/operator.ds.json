{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://dooksa.org/schema/action/1.0/action.ds.json",
  "title": "Action",
  "$defs": {
    "operator_compare": {
      "name": "Compare",
      "description": "Compare two or more values",
      "type": "array",
      "items": {
        "anyOf": [
          {
            "type": "string"
          },
          {
            "type": "number"
          }
        ]
      }
    },
    "operator_eval": {
      "name": "Evaluate",
      "description": "Evaluate two values",
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "values": {
          "type": "array",
          "items": {
            "oneOf": [
              {
                "type": "string"
              },
              {
                "type": "number"
              }
            ]
          }
        }
      }
    }
  }
}