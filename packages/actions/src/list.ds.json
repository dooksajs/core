{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://dooksa.org/schema/action/1.0/data.ds.json",
  "title": "Data",
  "$defs": {
    "list_filter": {
      "name": "Filter",
      "description": "Filter items based on conditions",
      "type": "object",
      "properties": {
        "items": {
          "type": "array",
          "items": {
            "oneOf": [
              {
                "type": "string"
              },
              {
                "type": "number"
              }
            ]
          }
        },
        "options": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "value": {
                "type": "any"
              }
            }
          }
        }
      }
    }
  }
}